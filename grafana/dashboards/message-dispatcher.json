{
  "id": null,
  "uid": "message-dispatcher",
  "title": "Message Dispatcher Metrics",
  "tags": [
    "message-dispatcher"
  ],
  "timezone": "browser",
  "version": 2,
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Messages Created (Total)",
      "type": "stat",
      "targets": [
        {
          "expr": "messages_created_total",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Requests (Total)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(http_requests_total) by (method, status_code)",
          "legendFormat": "{{method}} {{status_code}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "Kafka Messages Produced",
      "type": "stat",
      "targets": [
        {
          "expr": "kafka_messages_produced_total",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Kafka Messages Consumed",
      "type": "stat",
      "targets": [
        {
          "expr": "kafka_messages_consumed_total",
          "legendFormat": "{{topic}} ({{group}})",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 5,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{route}} ({{status_code}})",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 6,
      "title": "HTTP Request Duration (95th Percentile)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "{{method}} {{route}} (median)",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 7,
      "title": "Message Creation Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(messages_created_total[1m])",
          "legendFormat": "Created - {{type}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "rps"
        }
      }
    },
    {
      "id": 8,
      "title": "Kafka Message Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(kafka_messages_produced_total[1m])",
          "legendFormat": "Produced - {{topic}}",
          "refId": "A"
        },
        {
          "expr": "rate(kafka_messages_consumed_total[1m])",
          "legendFormat": "Consumed - {{topic}}",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "rps"
        }
      }
    },
    {
      "id": 9,
      "title": "Node.js Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes / 1024 / 1024",
          "legendFormat": "Heap Used (MB)",
          "refId": "A"
        },
        {
          "expr": "nodejs_heap_size_total_bytes / 1024 / 1024",
          "legendFormat": "Heap Total (MB)",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "MB"
        }
      }
    },
    {
      "id": 10,
      "title": "Process CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total[1m]) * 100",
          "legendFormat": "User CPU %",
          "refId": "A"
        },
        {
          "expr": "rate(process_cpu_system_seconds_total[1m]) * 100",
          "legendFormat": "System CPU %",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "5s",
  "editable": true
}